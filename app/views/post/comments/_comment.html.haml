%p
  %strong= "#{t :commenter, scope: [:activerecord, :attributes, :comment]}:"
  = comment.commenter

  %strong= "#{t :body, scope: [:activerecord, :attributes, :comment]}:"
  = comment.body

%p
  = link_to post_comment_path(@post, comment),
    method: :delete,
    data: { confirm: t(:confirmation) },
    class: "btn btn-danger btn-mini" do
    = t(:delete_btn)
    %span.icon-remove
