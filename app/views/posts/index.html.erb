<h1> All posts </h1>
<table>
  <tr>
    <th>Title</th>
    <th>Text</th>
  </tr>

  <% @posts.each do |post| %>
    <tr>
      <td><%= post.title %></td>
      <td><%= post.text %></td>
      <td><%= link_to "Show", post_path(post) %></td>
      <td><%= link_to "Update", edit_post_path(post) %></td>
      <td><%= link_to "Delete", post_path(post), method: :delete, data: { confirm: "Are you sure?" } %></td>
    </tr>
  <% end %>
</table>
<%= link_to "New one", new_post_path %>
