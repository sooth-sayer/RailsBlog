= simple_form_for [@post, @post.comments.build],
  :url => post_comments_path(@post),
  :html => { class: "form-horizontal add-a-comment" },
  :defaults => { :input_html => { class: "form-control" }, :wrapper_html => { class: "col-lg-10" }} do |f|

  .form-group
    = f.input :commenter

  .form-group
    = f.input :body, as: :text

  .controls
    = f.button :submit, class: "btn btn-success btn-mini"
