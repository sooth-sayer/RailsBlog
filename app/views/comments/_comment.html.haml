%p
  %strong= "#{t :commenter, scope: [:activerecord, :attributes, :comment]}:"
  = comment.commenter

  %strong= "#{t :body, scope: [:activerecord, :attributes, :comment]}:"
  = comment.body

%p
  = link_to [comment.post, comment],
    method: :delete,
    data: { confirm: t(:confirmation) },
    class: "btn btn-danger btn-xs" do
    = t(:delete_btn)
    %span.glyphicon.glyphicon-remove
