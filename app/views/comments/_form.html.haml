= form_for([@post, @post.comments.build], html: { class: "form-horizontal add-a-comment" }) do |f|
  .form-group
    = f.label :commenter, class: "col-lg-2 control-label", for: "comment_commenter"
    .col-lg-10
      = f.text_field :commenter, placeholder: "Commenter", class: "form-control"

  .form-group
    = f.label :body, class: "col-lg-2 control-label", for: "comment_body"
    .col-lg-10
      = f.text_area :body, placeholder: "Comment", class: "form-control"

  = f.submit class: "btn btn-success btn-xs"
